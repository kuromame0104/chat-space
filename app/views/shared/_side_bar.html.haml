.side-bar
  .user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        = link_to new_group_path(current_user), class:"top-items__icons__btn--edit" do
          = icon('far', 'edit', class:"top-items__icons__btn")
        = link_to edit_user_path(current_user), class:"top-items__icons__btn--config" do
          = icon('fas', 'cog', class:"top-items__icons__btn")
  .group-list
    .list
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            .group-name
              = group.name
            .latest-message
              = group.show_last_message